= page_header do
  = link_to "New Ingredient", adminsimple.root_url, class: 'adminsimple-btn'
  = link_to "Menu Ingredients", adminsimple.root_url, class: 'adminsimple-btn'

= widget_box class: 'nopadding', title: 'Admin Theme', icon: 'user' do
  #theme_controls.control-group
    .controls
      - Adminsimple.configuration.themes.each do |theme|
        %label.radio(for="check_#{theme}" style="display: block;")
          %input#check_simple(type="radio" name="theme" value="#{theme}")= theme.to_s.titleize

