!!!
%html
  %head
    %title Site Title
    = stylesheet_link_tag "protoadmin"
    = javascript_include_tag "protoadmin"
    = csrf_meta_tags
  %body

    #primary_bar
      %h1 Site Title
      %h2 Section Title

    #secondary_bar
      %h3 John Doe (#{link_to '3 Messages', '#'})
      %h4
        #breadcrumbs
          = link_to 'Bread', '#'
          = link_to 'Crumb', '#'
          = link_to 'Path', '#'

    #control
      %form#quick_search
        %input{ :type => 'text', :placeholder => 'Quick Search' }
        %hr

      %ul#primary_navigation
        %li{ :class => 'with-group' }
          %span Content
          %ul
            %li
              %a{ :href => '#', :class => 'articles-new' }
                %span Add New Article
            %li
              %a{ :href => '#', :class => 'articles-index' }
                %span View Articles
            %li
              %a{ :href => '#', :class => 'categories-index' }
                %span Categories
            %li
              %a{ :href => '#', :class => 'tags-index' }
                %span Tags
        %li{ :class => 'with-group' }
          %span Users
          %ul
            %li
              %a{ :href => '#' }
                %span Add New User
            %li
              %a{ :href => '#' }
                %span View Users
            %li
              %a{ :href => '#' }
                %span Your Profile
        %li{ :class => 'with-group' }
          %span Media
          %ul
            %li
              %a{ :href => '#' }
                %span File Manager
            %li
              %a{ :href => '#' }
                %span Gallery
            %li
              %a{ :href => '#' }
                %span Audio
            %li
              %a{ :href => '#' }
                %span Video
        %li{ :class => 'with-group' }
          %span Admin
          %ul
            %li
              %a{ :href => '#' }
                %span Options
            %li
              %a{ :href => '#' }
                %span Security
            %li
              %a{ :href => '#' }
                %span Logout

    #content
      = yield

    #info
      %hr
      %h5 Copyright &copy; 2011 Site Title
      %span Theme by #{link_to 'MediaLoot', 'http://www.medialoot.com/', :target => '_blank'}

